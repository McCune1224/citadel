# Highway 17 Dashboard Configuration

# Database (from Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/highway17

# Application Settings
APP_PORT=8080
APP_ENV=development
LOG_LEVEL=info

# Tailscale Authentication
TAILSCALE_ENABLED=true
TAILSCALE_API_KEY=

# Login Fallback Password
LOGIN_PASSWORD=checkpoint

# Weather Widget (Open-Meteo - no API key needed)
WEATHER_LATITUDE=43.1629
WEATHER_LONGITUDE=-77.6099
WEATHER_CACHE_TTL=600

# Polling Intervals (seconds)
STATS_POLL_INTERVAL=5
WEATHER_POLL_INTERVAL=600

# System Monitoring
SYSTEM_STATS_ENABLED=true
UPTIME_ENABLED=true
